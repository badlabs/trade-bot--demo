{
  "compilerOptions": {
    // project options
    "removeComments": true,
    "target": "ES2015",
    "module": "CommonJS",
    // Module resolution
    "esModuleInterop": true,
    "moduleResolution": "Node",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}